from flask import Flask

def create_app() -> Flask:
    app = Flask(__name__)
    app.config.update(
        DEBUG=True,
        TESTING=False,
        PROPAGATE_EXCEPTIONS=True,
    )
    return app

if __name__ == "__main__":
    app = create_app()
    app.run(
        host="0.0.0.0",
        port=5000,
        debug=True,
        use_reloader=True,
    )
