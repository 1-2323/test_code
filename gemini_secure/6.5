import subprocess
import json
import sys
import os

def run_dependency_check(output_file='vulnerability_report.json'):
    print(f"--- Запуск сканирования зависимостей... ---")
    
    try:
        # Запускаем safety check с выводом в формате JSON
        # Команда: safety check --json
        result = subprocess.run(
            ['safety', 'check', '--json'],
            capture_output=True,
            text=True
        )

        # Safety возвращает non-zero exit code, если найдены уязвимости
        # Поэтому парсим stdout в любом случае
        if not result.stdout:
            print("Ошибка: Не удалось получить данные от Safety. Убедитесь, что он установлен (pip install safety).")
            return

        report_data = json.loads(result.stdout)
        
        # Сохраняем полный отчет в файл
        with open(output_file, 'w', encoding='utf-8') as f:
            json.dump(report_data, f, indent=4, ensure_ascii=False)
            
        process_report(report_data)

    except FileNotFoundError:
        print("Ошибка: Инструмент 'safety' не найден. Установите его: pip install safety")
    except Exception as e:
        print(f"Произошла непредвиденная ошибка: {e}")

def process_report(data):
    """Обработка и красивый вывод результатов"""
    vulnerabilities = data.get('vulnerabilities', [])
    
    if not vulnerabilities:
        print("✅ Уязвимостей не обнаружено!")
        return

    print(f"❌ Найдено уязвимостей: {len(vulnerabilities)}")
    print("-" * 50)

    for vuln in vulnerabilities:
        pkg = vuln.get('package_name')
        version = vuln.get('installed_version')
        affected = vuln.get('vulnerable_spec')
        description = vuln.get('description')
        print(f"Пакет: {pkg} (Установлена версия: {version})")
        print(f"Уязвимые версии: {affected}")
        print(f"Описание: {description[:100]}...") # Ограничим длину описания
        print("-" * 30)

if __name__ == "__main__":
    run_dependency_check()
