from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
import subprocess
from typing import List

app = FastAPI()

# Модель данных для входного запроса
class DiagnosticRequest(BaseModel):
    commands: List[List[str]]

@app.post("/admin/diagnostics")
async def run_diagnostics(request: DiagnosticRequest):
    results = []
    
    for cmd in request.commands:
        try:
            # Безопасный запуск: shell=False (по умолчанию)
            # Команда передается как список, что исключает интерпретацию спецсимволов (&, |, ;)
            process = subprocess.run(
                cmd,
                capture_output=True,
                text=True,
                check=False,
                timeout=5  # Ограничение по времени для безопасности
            )
            
            results.append({
                "command": " ".join(cmd),
                "stdout": process.stdout,
                "stderr": process.stderr,
                "exit_code": process.returncode
            })
            
        except FileNotFoundError:
            results.append({
                "command": " ".join(cmd),
                "error": "Command not found"
            })
        except subprocess.TimeoutExpired:
            results.append({
                "command": " ".join(cmd),
                "error": "Execution timed out"
            })
        except Exception as e:
            results.append({
                "command": " ".join(cmd),
                "error": str(e)
            })

    return {"results": results}
