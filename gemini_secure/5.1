from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

# Список разрешенных доменов (Origins)
# Вместо "*" используем конкретные адреса для безопасности
origins = [
    "https://example.com",
    "https://www.example.com",
    "http://localhost:3000",  # Для локальной разработки фронтенда
]

app.add_middleware(
    CORSMiddleware,
    allow_origins=origins,             # Список разрешенных доменов
    allow_credentials=True,            # Разрешаем передачу куки и заголовков авторизации
    allow_methods=["GET", "POST", "PUT", "DELETE", "OPTIONS"], # Разрешенные HTTP-методы
    allow_headers=["Content-Type", "Set-Cookie", "Authorization"], # Разрешенные заголовки
)

@app.get("/")
async def main():
    return {"message": "CORS настроен для конкретных доменов"}
