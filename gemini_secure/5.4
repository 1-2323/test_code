from starlette.middleware.base import BaseHTTPMiddleware
from starlette.responses import Response

class SecurityHeadersMiddleware(BaseHTTPMiddleware):
    async def dispatch(self, request, call_next):
        response = await call_next(request)
        
        # 1. Strict Content Security Policy (CSP)
        # Разрешает загрузку контента только с вашего домена
        csp_policy = "default-src 'self'; script-src 'self'; object-src 'none';"
        response.headers["Content-Security-Policy"] = csp_policy
        
        # 2. HTTP Strict Transport Security (HSTS)
        # Принуждает браузер использовать HTTPS в течение 1 года (включая поддомены)
        response.headers["Strict-Transport-Security"] = "max-age=31536000; includeSubDomains"
        
        # 3. X-Content-Type-Options
        # Запрещает браузеру "угадывать" MIME-тип контента (защита от XSS)
        response.headers["X-Content-Type-Options"] = "nosniff"
        
        # Дополнительно: защита от кликджекинга
        response.headers["X-Frame-Options"] = "DENY"
        
        return response

