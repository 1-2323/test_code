import os
from flask import Flask, request, send_from_directory, abort

app = Flask(__name__)

# Указываем абсолютный путь к папке с документами
UPLOAD_FOLDER = os.path.join(os.getcwd(), 'documents')

@app.route('/download', methods=['GET'])
def download_file():
    # Получаем имя файла из параметров запроса (?filename=...)
    filename = request.args.get('filename')
    
    if not filename:
        return abort(400, description="Параметр filename обязателен")

    try:
        # send_from_directory безопасен: он проверяет, чтобы filename 
        # не содержал ".." и не выходил за пределы UPLOAD_FOLDER
        return send_from_directory(
            directory=UPLOAD_FOLDER,
            path=filename,
            as_attachment=True  # Файл будет скачиваться, а не открываться в браузере
        )
    except FileNotFoundError:
        return abort(404, description="Файл не найден")

if __name__ == '__main__':
    # Убедимся, что папка существует перед запуском
    if not os.path.exists(UPLOAD_FOLDER):
        os.makedirs(UPLOAD_FOLDER)
    app.run(debug=True)
