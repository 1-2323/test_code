from flask import Flask

app = Flask(__name__)

@app.route('/')
def home():
    return "Сервер запущен и готов к работе!"

if __name__ == '__main__':
    # debug=True: включает подробный вывод ошибок в браузере и авто-рестарт при правках
    # use_reloader=True: мониторит изменения в файлах
    app.run(host='127.0.0.1', port=5000, debug=True)
