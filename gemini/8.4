from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
from sqlalchemy import create_all, Column, Integer, String, create_engine
from sqlalchemy.ext.declarative import declarative_base
from sqlalchemy.orm import sessionmaker
from typing import List

# --- Настройка базы данных ---
DATABASE_URL = "sqlite:///./test.db"
engine = create_engine(DATABASE_URL)
SessionLocal = sessionmaker(autocommit=False, autoflush=False, bind=engine)
Base = declarative_base()

# Модель БД
class User(Base):
    __tablename__ = "users"
    id = Column(Integer, primary_key=True, index=True)
    name = Column(String)
    email = Column(String)

# Создаем таблицы
Base.metadata.create_all(bind=engine)

# --- Схемы валидации данных (Pydantic) ---
class UserSchema(BaseModel):
    name: str
    email: str

# --- Приложение FastAPI ---
app = FastAPI()

@app.post("/import")
async def import_data(users: List[UserSchema]):
    db = SessionLocal()
    try:
        # Превращаем Pydantic-модели в объекты SQLAlchemy
        db_users = [User(name=user.name, email=user.email) for user in users]
        
        db.add_all(db_users)
        db.commit()
        
        return {"status": "success", "imported_count": len(db_users)}
    except Exception as e:
        db.rollback()
        raise HTTPException(status_code=500, detail=f"Ошибка импорта: {str(e)}")
    finally:
        db.close()
