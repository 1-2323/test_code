import os
from flask import Flask, request, send_from_directory, abort

app = Flask(__name__)

# Указываем путь к папке с документами
# .abspath гарантирует, что мы работаем с полным путем
UPLOAD_FOLDER = os.path.join(os.getcwd(), 'documents')

# Проверяем, существует ли папка, чтобы сервер не выдал ошибку при первом запуске
if not os.path.exists(UPLOAD_FOLDER):
    os.makedirs(UPLOAD_FOLDER)

@app.route('/download', methods=['GET'])
def download_file():
    # Получаем имя файла из параметров URL (?filename=example.pdf)
    filename = request.args.get('filename')
    
    if not filename:
        return {"error": "Параметр filename обязателен"}, 400

    try:
        # send_from_directory безопасно отправляет файл из указанной папки
        # as_attachment=True заставляет браузер скачивать файл, а не открывать его
        return send_from_directory(
            directory=UPLOAD_FOLDER, 
            path=filename, 
            as_attachment=True
        )
    except FileNotFoundError:
        # Если файл не найден в папке
        abort(404, description="Файл не найден")

if __name__ == '__main__':
    app.run(debug=True)
